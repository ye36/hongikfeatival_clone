<div class="wrapperrn" id="wrapperrn">
      <div class="row">
        <div class="col-12 col-md-3 col-lg-4"></div>
        <div class="col-12 col-md-6 col-lg-4">
          <br>
          <div class="container">
                <div class="card opacity" style="margin-top:200px;">
                  <div class="card-body">  
                    <div class="center-btn">
                          <%= image_tag("signuplogo.png", :class => "img-fluid imgsizer3") %>
                    </div>      

                              <p class="text-center" style="font-size:14px">사용자 인증을 위하여 간단한 회원 정보만 받습니다. <br>이메일을 잘 기억해 주세요!</p>
                              <br>
                            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                              
                              <div class="form-group">
                                <%= f.label :name ,"이 름",class: "control-label"%><br />
                                <%= f.text_field :name, autofocus: true, class: "form-control", id: "name_input", :required => true %>
                              </div>
                              <div class="form-group">
                                <%= f.label :email ,"이메일",class: "control-label"%><br />
                                <%= f.email_field :email, autofocus: true, class: "form-control", id: "email_input" %>
                              </div>
                              <div class="form-group">
                                <%= f.label :password,"비밀번호",class: "control-label" %>
                                <% if @minimum_password_length %>
                                <em>(<%= @minimum_password_length %> 자리 이상)</em>
                                <% end %><br />
                                <%= f.password_field :password, autocomplete: "off" , class: "form-control", id: "password_input"%>
                              </div>
                              <div class="form-group">
                                <%= f.label :password_confirmation,"비밀번호 확인",class: "control-label" %><br />
                                <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control", id: "password_2_input"%>
                              </div>
                                <br>
                              <div class="actions">
                                <div class="center-btn">
                                  <%= f.submit "가입하기", class: "btn btn-primary", :onClick=>"empty()" %>
                                </div>
            
                              
                            <% end %>
                        
                        <br>
                          <p class="sign_in_p">계정이 이미 있다면? <a class="sign_in_link" href="/users/sign_in">로그인하기</a></p>
                    </div> 
                  </div>
                </div>
              </div>
            </div>
                
                
      </div>
</div>
<style>

.opacity {
  opacity: 0.85;
}
.ll{
    font-size:18px;
    font-weight:bold;
    color:white;
    margin-top:0px;
}
.imgsizer3{
  padding-top:20px;
    width:500px;
    padding-bottom:0px;
}

.btn-primary{
    background-color:#585a5e;
    border: 0.3px solid black;
}
.btn-primary:hover {
    color: #fff;
    background-color: black;
    border-color: black;
}
.centerer{
  display: block;
  margin-left: auto;
  margin-right: auto;
}
.sign_in_p{
  color:black;
  font-size:16px;
}
.sign_in_link{
  color:black;
  font-weight:bold;
}
.sign_in_link:hover{
  color:black;
  font-weight:bold;
}
</style>
<script>

function empty() {
    var x;
    x = document.getElementById("name").value;
    if (x == "") {
        alert("이름을 작성해 주세요!");
        return false;
    };
    x = document.getElementById("email_input").value;
    if (x == "") {
        alert("이메일을 적어주세요!");
        return false;
    };
    x = document.getElementById("password_input").value;
    if (x == "") {
        alert("패스워드를 작성해 주세요!");
        return false;
    }; 
    x = document.getElementById("password_2_input").value;
    if (x == "") {
        alert("패스워드 확인을 작성해 주세요!");
        return false;
    };
}
  
</script>
